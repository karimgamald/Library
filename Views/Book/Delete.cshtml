@model Library.Models.Book

@{
    ViewData["Title"] = "Delete Book";
}

<div class="container mt-4">
    <div class="card shadow-lg border-danger">
        <div class="card-header bg-danger text-white">
            <h3 class="mb-0"><i class="bi bi-trash"></i> Delete Book</h3>
        </div>
        <div class="card-body">
            <h5 class="text-danger">Are you sure you want to delete this book?</h5>
            <hr />

            <div class="row">
                <div class="col-md-4 text-center">
                    @if (!string.IsNullOrEmpty(Model.ImageUrl))
                    {
                        <img src="@Model.ImageUrl" alt="@Model.Title" class="img-fluid rounded shadow" style="max-height:300px;" />
                    }
                    else
                    {
                        <div class="border rounded p-4 bg-light text-muted">No Image Available</div>
                    }
                </div>

                <div class="col-md-8">
                    <dl class="row">
                        <dt class="col-sm-4">Title</dt>
                        <dd class="col-sm-8">@Model.Title</dd>

                        <dt class="col-sm-4">Author</dt>
                        <dd class="col-sm-8">@Model.Author</dd>

                        <dt class="col-sm-4">ISBN</dt>
                        <dd class="col-sm-8">@Model.ISBN</dd>

                        <dt class="col-sm-4">Publish Year</dt>
                        <dd class="col-sm-8">@Model.PublishYear</dd>

                        <dt class="col-sm-4">Available Copies</dt>
                        <dd class="col-sm-8">@Model.AvailableCopies</dd>

                        <dt class="col-sm-4">Status</dt>
                        <dd class="col-sm-8">
                            <span class="badge @(Model.Status.ToString() == "Available" ? "bg-success" : "bg-secondary")">
                                @Model.Status
                            </span>
                        </dd>

                        <dt class="col-sm-4">Category</dt>
                        <dd class="col-sm-8">@Model.Category?.Name</dd>
                    </dl>
                </div>
            </div>
        </div>
        <div class="card-footer d-flex justify-content-between">
            <form asp-action="DeleteConfirm" method="post" class="d-inline">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger">
                    <i class="bi bi-trash"></i> Confirm Delete
                </button>
            </form>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Back to List
            </a>
        </div>
    </div>
</div>
