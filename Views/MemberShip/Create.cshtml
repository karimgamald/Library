@model Library.Models.MemberShip

@{
    ViewData["Title"] = "Create Membership";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-header bg-primary text-white text-center rounded-top-4">
                    <h3 class="mb-0">
                        <i class="bi bi-person-plus"></i> Create Membership
                    </h3>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="mb-3">
                            <label class="form-label fw-semibold">User Full Name</label>
                            <input name="UserFullName" class="form-control rounded-pill" placeholder="Enter full name" />
                        </div>

                        <div class="mb-3">
                            <label asp-for="MemberShipType" class="form-label fw-semibold"></label>
                            <select asp-for="MemberShipType" class="form-select rounded-pill">
                                <option value="0">-- Select Membership Type --</option>
                                <option value="1">Normal</option>
                                <option value="2">Premium</option>
                            </select>
                            <span asp-validation-for="MemberShipType" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="FinePerDay" class="form-label fw-semibold"></label>
                            <input asp-for="FinePerDay" class="form-control rounded-pill" placeholder="Fine amountper day" />
                            <span asp-validation-for="FinePerDay" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ExtraBooks" class="form-label fw-semibold"></label>
                            <input asp-for="ExtraBooks" class="form-control rounded-pill" placeholder="Number of extra books" />
                            <span asp-validation-for="ExtraBooks" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ExtraDays" class="form-label fw-semibold"></label>
                            <input asp-for="ExtraDays" class="form-control rounded-pill" placeholder="Extra borrowing days" />
                            <span asp-validation-for="ExtraDays" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ExtraPenaltys" class="form-label fw-semibold"></label>
                            <input asp-for="ExtraPenaltys" class="form-control rounded-pill" placeholder="Penalty discount/extra" />
                            <span asp-validation-for="ExtraPenaltys" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4">
                                <i class="bi bi-arrow-left"></i> Back
                            </a>
                            <button type="submit" class="btn btn-success rounded-pill px-4">
                                <i class="bi bi-save"></i> Save
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
