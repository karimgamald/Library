@model Library.Models.MemberShip

@{
    ViewData["Title"] = "Edit";
}


<div class="container mt-5">
    <div class="card shadow-lg rounded-4" style="max-width: 700px; margin: auto;">
        <div class="card-header bg-primary text-white rounded-top-4">
            <h4 class="mb-0">
                <i class="bi bi-pencil-square me-2"></i> Edit Tier
            </h4>
        </div>

        <div class="card-body p-4">
            <form asp-action="Edit" asp-controller="MemberShip" method="post">
                <input type="hidden" asp-for="Id" />

                <div class="mb-3 text-center">
                    <span class="d-inline-block px-4 py-2 bg-light text-success fw-bold rounded-3 shadow-sm"
                          style="letter-spacing: 6px; font-size: 1.5rem; text-transform: uppercase;">
                        @Model.MemberShipType
                    </span>
                </div>

                <div class="mb-3">
                    <label asp-for="FinePerDay" class="form-label fw-bold"></label>
                    <input asp-for="FinePerDay" class="form-control" />
                    <span asp-validation-for="FinePerDay" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ExtraBooks" class="form-label fw-bold"></label>
                    <input asp-for="ExtraBooks" class="form-control" />
                    <span asp-validation-for="ExtraBooks" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ExtraDays" class="form-label fw-bold"></label>
                    <input asp-for="ExtraDays" class="form-control" />
                    <span asp-validation-for="ExtraDays" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ExtraPenaltys" class="form-label fw-bold"></label>
                    <input asp-for="ExtraPenaltys" class="form-control" />
                    <span asp-validation-for="ExtraPenaltys" class="text-danger"></span>
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-success px-4">
                        <i class="bi bi-check2-circle me-1"></i> Save Changes
                    </button>
                    <a asp-action="Index" class="btn btn-secondary px-4 ms-2">
                        <i class="bi bi-arrow-left-circle me-1"></i> Back
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
