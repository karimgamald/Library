@model List<MemberShip>

@{
    ViewData["Title"] = "Index";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-success">
            <i class="bi bi-gem me-2"></i> Membership Tiers
        </h2>
        <a asp-controller="Home" asp-action="Index" class="btn btn-primary px-4 rounded-pill">
            <i class="bi bi-arrow-left-circle me-1"></i> Back
        </a>
    </div>

    <div class="card shadow-lg rounded-4">
        <div class="card-body">
            <table class="table table-hover align-middle text-center">
                <thead class="table-success">
                    <tr>
                        <th>MemberShip</th>
                        <th>Fine Per Day</th>
                        <th>Extra Books</th>
                        <th>Extra Days</th>
                        <th>Extra Penalty</th>
                        <th>Users Count</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var tier in Model)
                        {
                            <tr>
                                <td>@tier.MemberShipType</td>
                                <td>@tier.FinePerDay</td>
                                <td>@tier.ExtraBooks</td>
                                <td>@tier.ExtraDays</td>
                                <td>@tier.ExtraPenaltys.ToString("C")</td>
                                <td>@(tier.Users?.Count() ?? 0)</td>
                                <td>
                                    <a asp-action="Edit" asp-controller="MemberShip" asp-route-id="@tier.Id"
                                       class="btn btn-sm btn-outline-primary me-2">
                                        <i class="bi bi-pencil-square"></i> Edit
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5" class="text-muted">No membership tiers found.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
