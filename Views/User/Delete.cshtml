@model Library.Models.User

@{
    ViewData["Title"] = "Delete User";
}

<h1 class="text-danger">Delete User</h1>

<h3>Are you sure you want to delete this user?</h3>
<div>
    <h4>User Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Full Name</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.FullName)</dd>

        <dt class="col-sm-2">User Name</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.UserName)</dd>

        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Email)</dd>

        <dt class="col-sm-2">Address</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Address)</dd>

        <dt class="col-sm-2">Phone</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Phone)</dd>

        <dt class="col-sm-2">Birth Date</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.BirthDate)</dd>

        <dt class="col-sm-2">Photo</dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.PhotoPath))
            {
                <img src="@Model.PhotoPath" alt="@Model.FullName"
                     class="img-thumbnail rounded shadow"
                     style="max-height:150px;" />
            }
            else
            {
                <span class="text-muted">No photo uploaded</span>
            }
        </dd>

        <dt class="col-sm-2">Membership</dt>
        <dd class="col-sm-10">@Model.MemberShip?.MemberShipType</dd>
    </dl>

    <!-- Delete Button triggers modal -->
    <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal">
        Delete
    </button>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

<!-- Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="deleteModalLabel">Confirm Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                ⚠️ Are you sure you want to delete user: <strong>@Model.FullName</strong>?<br />
                This action cannot be undone!
            </div>
            <div class="modal-footer">
                <form asp-action="Delete" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="Id" />
                    <button type="submit" class="btn btn-danger">Yes, Delete</button>
                </form>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</div>
