<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MyLibrary</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@500;600&display=swap" rel="stylesheet">
    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Library.styles.css" asp-append-version="true" />

    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background-color: #f8f9fa;
        }

        .navbar-brand {
            font-size: 1.5rem;
            letter-spacing: 0.5px;
        }

            .navbar-brand i {
                font-size: 1.6rem;
                margin-right: 6px;
                color: #0dcaf0; /* modern accent color */
            }

        .nav-link.active {
            font-weight: 600;
            color: #0dcaf0 !important;
        }

        footer {
            font-size: 0.9rem;
        }
    </style>
</head>
<body class="d-flex flex-column min-vh-100">
    <!-- Navbar -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-sm">
            <div class="container-fluid">
                <a class="navbar-brand fw-semibold" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-book-half"></i> MyLibrary
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent"
                        aria-controls="navbarContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarContent">
                    <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link @((ViewData["Title"] as string) == "Home" ? "active" : "")"
                               asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="bi bi-house-door me-1"></i> Home
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @((ViewData["Title"] as string) == "Users" ? "active" : "")"
                               asp-area="" asp-controller="User" asp-action="Index">
                                <i class="bi bi-people-fill me-1"></i> Users
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @((ViewData["Title"] as string) == "Books" ? "active" : "")"
                               asp-area="" asp-controller="Book" asp-action="Index">
                                <i class="bi bi-book me-1"></i> Books
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @((ViewData["Title"] as string) == "Categories" ? "active" : "")"
                               asp-area="" asp-controller="Category" asp-action="Index">
                                <i class="bi bi-tags me-1"></i> Categories
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @((ViewData["Title"] as string) == "Borrowings" ? "active" : "")"
                               asp-area="" asp-controller="Borrowing" asp-action="Index">
                                <i class="bi bi-box-arrow-right me-1"></i> Borrowings
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @((ViewData["Title"] as string) == "Memberships" ? "active" : "")"
                               asp-area="" asp-controller="MemberShip" asp-action="Index">
                                <i class="bi bi-people me-1"></i> Memberships
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @((ViewData["Title"] as string) == "About Us" ? "active" : "")"
                               asp-area="" asp-controller="Home" asp-action="AboutUs">
                                <i class="bi bi-info-circle me-1"></i> About Us
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">
                                <i class="bi bi-shield-lock me-1"></i> Privacy
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- Main Content -->
    <div class="container mt-4">
        <main role="main" class="flex-grow-1 container mt-4">
            @RenderBody()
        </main>
    </div>

    <!-- ✅ Sticky Footer -->
    <footer class="bg-dark text-light py-3 mt-auto">
        <div class="container text-center">
            <small>
                &copy; @DateTime.Now.Year - <strong>MyLibrary</strong> |
                <a asp-controller="Home" asp-action="Privacy" class="text-decoration-none text-info">
                    Privacy Policy
                </a>
            </small>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
