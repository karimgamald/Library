@{
    ViewData["Title"] = "Borrowings";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="fw-bold text-primary">📖 Borrowings List</h2>
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Create New Borrowing
        </a>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body p-0">
            <table class="table table-hover table-striped align-middle mb-0">
                <thead class="table-dark">
                    <tr>
                        <th class="text-center">User</th>
                        <th class="text-center">Book</th>
                        <th class="text-center">BorrowDate</th>
                        <th class="text-center">DueDate</th>
                        <th class="text-center">ReturnDate</th>
                        <th class="text-center">TotalDays</th>
                        <th class="text-center">Status</th>
                        <th class="text-center">Total Fines</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="text-center">@item.User?.FullName</td>
                            <td class="text-center">@item.Book?.Title</td>
                            <td class="text-center">@item.BorrowDate.ToShortDateString()</td>
                            <td class="text-center">@item.DueDate.ToShortDateString()</td>
                            <td class="text-center">
                                @(item.ReturnDate == DateTime.MinValue ? "—" : item.ReturnDate?.ToShortDateString())
                            </td>
                            <td class="text-center">@item.TotalDays</td>
                            <td class="text-center">
                                <span class="badge bg-@(item.Status == Library.Enums.BorrowingStatus.Borrowed ? "warning" : item.Status == Library.Enums.BorrowingStatus.Returned ? "success": "danger")">
                                @item.Status
                            </span>
                        </td>
                        <td class="text-center">@item.TotalFines</td>
                        <td>
                            <div class="btn-group" role="group">
                                <a asp-action="Edit" asp-route-id="@item.Id"
                                   class="btn btn-sm btn-outline-secondary me-2">
                                    ✏️ Edit
                                </a>
                                <a asp-action="Details" asp-route-id="@item.Id"
                                   class="btn btn-sm btn-outline-info me-2">
                                    📖 Details
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.Id"
                                   class="btn btn-sm btn-outline-danger me-2">
                                    🗑️ Delete
                                </a>
                                @if (item.Status == Library.Enums.BorrowingStatus.Borrowed)
                                    {
                                        <form asp-action="Return" asp-route-id="@item.Id" method="post" class="d-inline">
                                            <button type="submit" class="btn btn-sm btn-outline-success">
                                                🔄 Return
                                            </button>
                                        </form>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
