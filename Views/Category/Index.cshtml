@model IEnumerable<Library.Models.Category>

@{
    ViewData["Title"] = "Categories";
    Layout = "_Layout";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="fw-bold text-primary">🏷️ Categories List</h2>
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Create New Category
        </a>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body p-0">
            <table class="table table-hover table-striped align-middle mb-0">
                <thead class="table-dark">
                    <tr>
                        <th class="text-center">@Html.DisplayNameFor(model => model.Name)</th>
                        <th class="text-center">@Html.DisplayNameFor(model => model.Description)</th>
                        <th class="text-center">Books Count</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="text-center">@Html.DisplayFor(modelItem => item.Name)</td>
                            <td class="text-center">
                                <div style="max-height: 60px; overflow-y: auto; white-space: normal;">
                                    @Html.DisplayFor(modelItem => item.Description)
                                </div>
                            </td>
                            <td class="text-center">@(item.Books?.Count() ?? 0)</td>
                            <td class="text-center">
                                <div class="btn-group" role="group">
                                    <a asp-action="Edit" asp-route-id="@item.Id"
                                       class="btn btn-sm btn-outline-secondary me-2">
                                        ✏️ Edit
                                    </a>
                                    <a asp-action="Details" asp-route-id="@item.Id"
                                       class="btn btn-sm btn-outline-info me-2">
                                        📖 Details
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.Id"
                                       class="btn btn-sm btn-outline-danger">
                                        🗑️ Delete
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
